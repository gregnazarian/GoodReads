<p id="notice"><%= notice %></p>

<h1>Bookshelves</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookshelves.each do |bookshelf| %>
      <tr>
        <td><%= bookshelf.name %></td>
        <td><%= link_to 'Show', user_bookshelf_path(@user.id, bookshelf.id) %></td>
        <td><%= link_to 'Edit', edit_user_bookshelf_path(@user.id, bookshelf.id) %></td>
        <td><%= link_to 'Destroy', user_bookshelf_path(@user.id, bookshelf.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bookshelf', new_user_bookshelf_path(@user.id) %>
